@model ProductDescriptionModel
@{
    var product = Model.Cards.FirstOrDefault(x => x.SKU == Model.Sku);
}

    <div class='rating'>
      <div class="stars">
        @for (int i = 0; i < product!.Rating; i++)
        {
            <i class="fa-sharp fa-solid fa-star"></i>
        }

      </div>
      <p>@product!.TotalComments Reviews</p>
    </div>